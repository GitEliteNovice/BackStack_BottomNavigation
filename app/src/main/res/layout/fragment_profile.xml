<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"


             tools:context=".fragments.ProfileFragment">
<LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/Profile_fragment"/>
    <ImageView
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_iron_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:background="@drawable/background_layout"
            android:textColor="@color/orange"
            android:textSize="20dp"
            android:id="@+id/more_about_me"
            android:layout_height="wrap_content"
            android:text="@string/my_profile"/>
</LinearLayout>

    <!-- TODO: Update blank fragment layout -->
<FrameLayout
        android:id="@+id/profile_conainer"
        android:layout_width="match_parent" android:layout_height="match_parent"></FrameLayout>
</FrameLayout>